/* pages/test/test.wxss */
page{
    font-family: "Helvetica","Arial","Verdana","sans-serif","PingHei","Helvetica Neue";
}


.weather_wrap{
  position: fixed;
  flex-direction: column;
  height: 100%;
  width: 100%;
  background-color: #000000;
  color: #fff;
  display: flex;
  font-family: 'Arita-Heiti'
}

.weather_today{
  padding: 0 0 0 50rpx;
  font-size: 100rpx;
  flex-direction: row;
  font-weight: 600;
}

.weather_status{
  position: relative;
  display: flex;
  flex:1;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.weather_status_txt{
   word-wrap: break-word;
   font-size: 90rpx;
   width: 100rpx;
}

.currentWeather{
  text-align: right;
  font-size: 120rpx;
  padding-right: 40rpx;
  padding-top:20rpx;
  padding-bottom:20rpx;
}

.city_wrap{
  font-size: 40rpx;
  display: flex;
  flex-direction: row;
  height: 80rpx;
  position: absolute;
  left: 40rpx;
  bottom: 40rpx;

}

.city_txt{
  font-size: 50rpx;
}
.date{
  flex: 1;
  text-align: right;
  padding-right: 40rpx;
  font-size: 40rpx;
  vertical-align: middle;
}

.top_date{
 padding-left: 50rpx;
 letter-spacing: 15rpx;
 color: #eeeeee;
}
