/* pages/xgm/xgm.wxss */

.date-text{
    font-size: 10px;
    color:#666;
    margin-left:10rpx;
}

.xgm-container{
    padding:20rpx 25rpx;
    width: 90%;
    margin:40rpx auto;
    box-shadow: 0 4px 10px 0 rgba(44,57,75,0.1);
}

.xgm-container-hover{
    transform: scale(0.95);
    transition: all .3s;
}

.title{
    font-size: 18px;
}

.name-text{
    font-size: 10px;
    background-color: red;
    padding:5rpx 10rpx;
    border-radius: 10rpx;
    color:#fff;
}

.hidden{
    display: none ;
}

.xgm-swiper{
  margin-bottom: 20rpx;
}

.xgm-swiper image{ 
  width:100%;
  height: 100%;
}

.news-container{
  background:#fff;
  height:500rpx;
  width:80%;
  position:fixed;
  left:10%;

  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  border:1px solid #eee;

}

.news-content{
  flex:1;
  padding: 40rpx;
  font-size: 32rpx;
}

.news-container button{
  width: 80%;
  margin: 20rpx auto;
  color:#fff;
  background-color: #0099FF
}

.btn-hover{
  background-color: #00CCFF
}