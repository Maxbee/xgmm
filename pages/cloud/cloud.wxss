/* pages/cloud/cloud.wxss */
.calendar{
  width:630rpx ;
  background: #f2f2f2;
  margin: 0 auto;
  /* border-radius:8rpx; */
  overflow: hidden;
  box-shadow: 5px 5px 10px #ededed
}
.tips{
  width:630rpx ;
  margin: 0 auto;
  margin-bottom: 10rpx;
}
.banner{
  text-align: center;
}
.month{
  font-size: 14pt;
  background: #2d2c28;
  text-align: center;
  color: #ffffff;
  font-weight: bolder;
  padding: 10rpx 0;
}
.row{
  display: flex;
}

.item{
  color: #413f38;
  border: 0.5rpx solid #dddddd;
  vertical-align: middle;
  text-align: center;
  width: 90rpx;
  height: 90rpx;
  font-size: 12pt;
  /* line-height: 75rpx; */
  font-weight: bold;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.xingqi{
  display: flex;
}
.xingqi_item{
  vertical-align: middle;
  text-align: center;
  width: 90rpx;
  height: 75rpx;
  font-size: 12pt;
  line-height: 75rpx;
  font-weight: bolder
}
.red{
  color: #d84356;
}
.select{
  background: #d84356;
  color: #ffffff;
}
.work{
  background:#85c3da;
  color: #ffffff;
}

.pre_text{
  font-size: 5pt;
}

.blockstyle{
  display: inline-block !important;
  width: 45rpx;
  height: 45rpx; 
  line-height: 45rpx;
  text-align: center;
}

.gm{
  font-size: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.share{
  display: inline-block;
  height: 45rpx; 
  line-height: 45rpx;
  vertical-align: text-bottom;
  font-size: 20rpx;
  margin-left: 10rpx;
}